{
  "name": "data-service",
  "version": "0.0.0",
  "description": "Data service for Global Electrification Platform",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/developmentseed/gep-data-service.git"
  },
  "author": {
    "name": "Development Seed",
    "url": "https://developmentseed.org"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/developmentseed/project-seed/issues"
  },
  "engines": {
    "node": ">=8.12.0"
  },
  "scripts": {
    "start": "node index.js",
    "init-dev-db": "node_modules/.bin/run-s start-dev-db migrate-dev-db seed-dev-db",
    "start-dev-db": "docker-compose -f docker-compose-dev.yml up -d",
    "migrate-dev-db": "export NODE_ENV=development; sleep 1; until node_modules/.bin/knex migrate:latest; do echo \"Database is not ready, will retry in 10 seconds...\"; sleep 10; done",
    "seed-dev-db": "NODE_ENV=development node_modules/.bin/knex seed:run",
    "stop-dev-db": "docker-compose -f docker-compose-dev.yml down",
    "dev": "NODE_ENV=development node_modules/.bin/nodemon index.js",
    "init-test-db": "node_modules/.bin/run-s start-test-db migrate-test-db seed-test-db",
    "start-test-db": "docker-compose -f docker-compose-test.yml up -d",
    "migrate-test-db": "export NODE_ENV=test; sleep 1; until node_modules/.bin/knex migrate:latest; do echo \"Database is not ready, will retry in 10 seconds...\"; sleep 10; done",
    "seed-test-db": "NODE_ENV=test node_modules/.bin/knex seed:run",
    "stop-test-db": "docker-compose -f docker-compose-test.yml down",
    "test": "NODE_ENV=test mocha test/test-index.js",
    "lint": "node_modules/.bin/eslint app/ test/ seeds/ migrations/ --ext .js"
  },
  "dependencies": {
    "boom": "^7.2.2",
    "config": "^2.0.1",
    "fast-csv": "^2.4.1",
    "fs-extra": "^7.0.1",
    "hapi": "^17.6.0",
    "joi": "^14.1.0",
    "js-yaml": "^3.12.0",
    "knex": "^0.15.2",
    "npm-run-all": "^4.1.3",
    "pg": "^7.6.0",
    "qs": "^6.5.2",
    "request": "^2.88.0"
  },
  "devDependencies": {
    "eslint": "^5.8.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.6",
    "supertest": "^3.3.0"
  }
}
