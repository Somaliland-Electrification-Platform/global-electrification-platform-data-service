{
  "name": "data-service",
  "version": "0.0.0",
  "description": "Data service for Global Electrification Platform",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/developmentseed/gep-data-service.git"
  },
  "author": {
    "name": "Development Seed",
    "url": "https://developmentseed.org"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/developmentseed/project-seed/issues"
  },
  "engines": {
    "node": "8.x"
  },
  "scripts": {
    "start": "node index.js",
    "init-test-db": "node_modules/.bin/run-s start-test-db migrate-test-db seed-test-db",
    "start-test-db": "docker-compose -f docker-compose-test.yml up -d",
    "migrate-test-db": "export NODE_ENV=test; until node_modules/.bin/knex migrate:latest; do echo \"Database is offline, will retry in 5 seconds...\"; sleep 5; done",
    "seed-test-db": "NODE_ENV=test node_modules/.bin/knex seed:run",
    "stop-test-db": "docker-compose -f docker-compose-test.yml down"
  },
  "dependencies": {
    "config": "^2.0.1",
    "hapi": "^17.6.0",
    "js-yaml": "^3.12.0",
    "knex": "^0.15.2",
    "npm-run-all": "^4.1.3",
    "pg": "^7.6.0"
  }
}
